{
  "name": "pelatformdev",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "clean:all": "turbo run clean:all && rm -rf .turbo && rm -rf bun.lock && rm -rf node_modules",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "lint:format": "biome check --write --unsafe --no-errors-on-unmatched",
    "types:check": "turbo run types:check",
    "release": "turbo run build --filter=./packages/* && changeset publish && bun -r run postpublish",
    "version": "changeset version && bun install --lockfile-only"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@changesets/cli": "^2.29.7",
    "husky": "^9.1.7",
    "rimraf": "^6.1.2",
    "turbo": "2.6.1",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.3"
}
